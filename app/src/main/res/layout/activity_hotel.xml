<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#fff4d9"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HotelActivity">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:scaleX="2"
        android:scaleY="2"
        android:padding="10dp"
        app:srcCompat="@drawable/baseline_arrow_back_24" />

    <ImageView
        android:id="@+id/imageHotel"
        android:layout_width="match_parent"
        android:layout_height="250sp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/titleHotel"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:textStyle="bold"
        android:text="Text"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/locationHotel"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:text="Text"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/ratingHotel"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:text="Text"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/priceHotel"
        android:paddingHorizontal="10dp"
        android:paddingVertical="20dp"
        android:text="Text"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/servHotel"
        android:paddingHorizontal="10dp"
        android:paddingVertical="20dp"
        android:text="Text"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/spinnerHotel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"/>

    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingVertical="10dp"
        android:paddingTop="30dp"
        android:paddingBottom="6dp"
        android:text="Добавить в корзину"
        android:textSize="20dp" />


</LinearLayout>